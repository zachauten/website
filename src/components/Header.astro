  <div class="container">
    <div class="logo">
      <a href="/">
        <span class="logo-text">North Carolina Triangle DSA</span>
      </a>
    </div>
    <nav>
      <ul>
        <li><a href="/#about">About</a></li>
        <li><a href="/#campaigns">Campaigns</a></li>
        <li><a href="/#join">Join</a></li>
