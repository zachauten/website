---
interface Props {
  title?: string;
  description?: string;
}

const {
  title = "North Carolina DSA",
  description =
    "North Carolina Chapter of the Democratic Socialists of America - Building a democratic, socialist future in the Tar Heel State",
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content={description} />
    <link rel="icon" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
:root {
  --red-primary: #ec1f27;
  --red-dark: #c41e1e;
  --pink: #fbd2d4;
  --black: #000000;
  --white: #ffffff;
  --gray-light: #f5f5f5;
  --gray-medium: #666666;
  --text-primary: #1a1a1a;
}

* {
  box-sizing: border-box;
  margin: 0;
  padding: 0;
}

html,
body {
  margin: 0;
  width: 100%;
  height: 100%;
  font-family:
    -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen, Ubuntu,
    Cantarell, sans-serif;
  color: var(--text-primary);
  line-height: 1.6;
}

h1, h2, h3, h4, h5, h6 {
  font-weight: 700;
  line-height: 1.2;
  margin-bottom: 1rem;
}

h1 {
  font-size: 2.5rem;
}

h2 {
  font-size: 2rem;
}

h3 {
  font-size: 1.5rem;
}

a {
  color: var(--red-primary);
  text-decoration: none;
}

a:hover {
  color: var(--red-dark);
  text-decoration: underline;
}
</style>
